[Unit]
Description=Pista Backend API Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/app/pista
Environment="PATH=/app/pista/venv/bin"
ExecStart=/app/pista/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

